@page
@model EmployeeShiftManagement.Pages.Employees.IndexModel

@{
    ViewData["Title"] = "Employees";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
    <div class="card bg-white p-4 ">
        <h1>List Of Employees</h1>

        <p>
            <a class="btn btn-sm btn-outline-primary" asp-page="Create">Create New</a>
            <button onclick="ExportEmployees()" class="btn btn-sm btn-outline-dark">Export</button>
        </p>
        
        <table class="table" id="AllEmployees">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Employee[0].Username)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Employee[0].Password)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Employee[0].FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Employee[0].LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Employee[0].EmployeeNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Employee[0].ContractStartingDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Employee[0].ContractEndingDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Employee[0].EmployeeRole)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Employee)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeeNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContractStartingDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContractEndingDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeeRole.ID)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                            <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>