@page
@model EmployeeShiftManagement.Pages.Shifts.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Shift</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Shift.ID" />
            <div class="form-group">
                <label asp-for="Shift.StartingTime" class="control-label"></label>
                <input asp-for="Shift.StartingTime" class="form-control" />
                <span asp-validation-for="Shift.StartingTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shift.EndingTime" class="control-label"></label>
                <input asp-for="Shift.EndingTime" class="form-control" />
                <span asp-validation-for="Shift.EndingTime" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Shift.IsMorningShift" /> @Html.DisplayNameFor(model => model.Shift.IsMorningShift)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Shift.MinimumRequirement" class="control-label"></label>
                <input asp-for="Shift.MinimumRequirement" class="form-control" />
                <span asp-validation-for="Shift.MinimumRequirement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shift.MaximumRequirement" class="control-label"></label>
                <input asp-for="Shift.MaximumRequirement" class="form-control" />
                <span asp-validation-for="Shift.MaximumRequirement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
